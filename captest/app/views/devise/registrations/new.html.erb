
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'form-vertical', id: 'signupform') do |f| %>
  <%= devise_error_messages! %>
  
     <%= f.label :first_name, class: 'control-label' %>
       <%= f.text_field :fname, autofocus: true, class: 'form-control', placeholder: 'First Name' %>

   <%= f.label :last_name, class: 'control-label'%>
  <%= f.text_field :lname, autofocus: true, class: 'form-control', placeholder: 'Last Name' %> 

     <%= f.label :email, class: 'control-label' %>
  <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'E-Mail' %>

     <%=f.label :password, class:'control-label' %><% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %>
    <%= f.password_field :password, autocomplete: "off", id:'passwordinput', class: 'form-control', placeholder: 'Password'%>

     <%= f.label :password_confirmation, class:'control-label' %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Password Confirmation' %>
<br>
   <%= f.submit "Sign up", id: 'btn-signup', class: 'btn btn-info' %>

<% end %>
<br>
<%= render "devise/shared/links" %>
