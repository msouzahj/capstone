<%= form_for([@meet, @event]) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<% if @event.meet.season.season == "Outdoor" %>

  <div class="form-group">
    <%= f.label :outdoor_event %><br>
    <%= f.select :name, [['100m'],['200m'],['400m'],['800m'],['1500m'],['3000m Steeple'],['5000m'],['10,000m'],['100mH'],['110mH'],['400mH'],['4x100m Relay'],['4x400m Relay'],['Long Jump'],['Triple Jump'],['High Jump'],['Pole Vault'],['Discus Throw'],['Hammer Throw'],['Javelin Throw'],['Shot Put']], :include_blank => true, class:"form-control" %>
  <br><br>
  </div>
  <div class="form-group">
   <%= f.label :result %><br>
   <%= f.text_field :results, class:"form-control" %>
  </div>
<!-- Add a field event and a track event to the model, as well as results for each -->
<% else %>
  <div class="form-group">
    <%= f.label :indoor_event %><br>
    <%= f.select :name, [['50m'],['55m'],['60m'],['50mH'],['55mH'],['60mH'],['200m'],['400m'],['800m'],['1500m'],['3000m'],['5000m'],['4x100m Relay'],['4x400m Relay'],['Long Jump'],['Triple Jump'],['High Jump'],['Pole Vault'],['Shot Put'],['Weight Throw']] , :include_blank => true, class:"form-control" %>
<br><br>
  </div>
  <div class="form-group">
   <%= f.label :result %><br>
   <%= f.text_field :results, class:"form-control" %>
  </div>

<% end %>
  <%= button_tag(type: 'submit', class: "btn btn-success") do %>
        Submit
  <% end %>
<br>

<% end %>


